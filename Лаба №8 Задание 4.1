#include <iostream>
#include <forward_list>
using namespace std;

int main() {
	forward_list <int> numbers;
	int n;
	float sr;
	int sum = 0;
	int cnt = 0;
	do {
		cin >> n;
		numbers.push_front(n);
		if (n % 4 == 0) {
			sum += n;
			cnt++;
		}
	} while (n != 0);
	sr = sum / cnt;
	cout << "srednee ariphmet = " << sr << endl;
}
