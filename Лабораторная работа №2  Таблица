#include <iostream>
using namespace std;

// 1 ЗАДАЧА
void a(float x, float y, float z)
{
	if (x == 0) {
		cout << "1";
	}
	if (y == 0) {
		cout << "2";
	}
	if (z == 0) {
		cout << "3";
	}
}

// 2 ЗАДАЧА
void b(float k, float l, float n)
{
	if (k > l) {
		if (l > n) {
			cout << "Наибольшее = 1; Наименьшее = 3";
		}
		else {
			if (n < k) {
				cout << "Наибольшее = 1; Наименьшее = 2";
			}
			else {
				cout << "Наибольшее = 3; Наименьшее = 2";
			}
		}
	}
	else {
		if (k > n) {
			cout << "Наибольшее = 2; Наименьшее = 3";
		}
		else {
			if (l < n) {
				cout << "Наибольшее = 3; Наименьшее = 1";
			}
			else {
				cout << "Наибольшее = 2; Наименьшее = 1";
			}
		}
	}
}

// 3 ЗАДАЧА
void c(float y, float z)
{
	float proiz, polsum;
	cout << "y = ";
	cin >> y;
	cout << "z = ";
	cin >> z;
	polsum = (y + z) / 2;
	proiz = 2 * y * z;
	if (y < z) {
		z = polsum;
		y = proiz;
	}
	else {
		y = polsum;
		z = proiz;
	}
	cout << "=>";
	cout << "  Y = " << y;
	cout << "  Z = " << z;
}

// 4 ЗАДАЧА
void d(float x, float y, float z)
{
	int pos = 0, neg = 0;
	if (x > 0) {
		pos++;
	}
	else if (x < 0) {
		neg++;
	}

	if (y > 0) {
		pos++;
	}
	else if (y < 0) {
		neg++;
	}

	if (z > 0) {
		pos++;
	}
	else if (z < 0) {
		neg++;
	}
	cout << "Положительных = " << pos << endl;
	cout << "Отрицательных = " << neg << endl;
}

// 5 ЗАДАЧА
void e(float a, float b, float c)
{
	int max = 0, min = 0;
	if ((a > b) and (a > c)) {
		max = a;
	}

	if ((b > a) and (b > c)) {
		max = b;
	}

	if ((c > b) and (a < c)) {
		max = c;
	}

	if ((a < b) and (a < c)) {
		min = a;
	}

	if ((b < a) and (b < c)) {
		min = b;
	}

	if ((c < b) and (a > c)) {
		min = c;
	}
	cout << max - min;
}

// 6 ЗАДАЧА
void f(float a, float b, float c)
{
	float k = 0, m = 0, n = 0;
	if ((a > b) and (b > c)) {
		k = c;
		n = a;
		a = k;
		c = n;
	}

	if ((a > c) and (c > b)) {
		k = b;
		m = c;
		n = a;
		a = k;
		b = m;
		c = n;
	}

	if ((b > a) and (a > c)) {
		k = c;
		m = a;
		n = b;
		a = k;
		b = m;
		c = n;
	}

	if ((b > c) and (c > a)) {
		m = c;
		n = b;
		b = m;
		c = n;
	}

	if ((c > a) and (a > b)) {
		k = b;
		m = a;
		a = k;
		b = m;
	}
	cout << "K = " << a << endl;
	cout << "M = " << b << endl;
	cout << "N = " << c << endl;
}

// 7 ЗАДАЧА
void g(float a, float b, float c)
{
	float max1 = 0, max2 = 0;
	if ((a > b) and (b > c)) {
		max1 = a;
		max2 = b;
	}

	if ((a > c) and (c > b)) {
		max1 = a;
		max2 = c;
	}

	if ((b > a) and (a > c)) {
		max1 = b;
		max2 = a;
	}

	if ((b > c) and (c > a)) {
		max1 = b;
		max2 = c;
	}

	if ((c > a) and (a > b)) {
		max1 = c;
		max2 = a;
	}
	cout << "max(1) = " << max1 << endl;
	cout << "max(2) = " << max2 << endl;
}

// 8 ЗАДАЧА
void h(float a, float b, float c)
{
	if ((a < b) and (a < c)) {
		a = (c + b) / 2;
	}
	else if ((a > b) and (b < c)) {
		b = (a + c) / 2;
	}
	else if ((c < b) and (a > c)) {
		c = (a + b) / 2;
	}
	cout << "L = " << a << endl;
	cout << "M = " << b << endl;
	cout << "N = " << c << endl;
}

// 9 ЗАДАЧА
void i(float a, float b, float c, float d)
{
	float a2 = a, b2 = b, c2 = c, d2 = d;
	if (b2 > a2) {
		a2 = b2;
	}
	if (c2 > a2) {
		a2 = c2;
	}
	if (d2 > a2) {
		a2 = d2;
	}
	cout << "A = " << a / a2 << endl;
	cout << "B = " << b / a2 << endl;
	cout << "C = " << c / a2 << endl;
	cout << "D = " << d / a2 << endl;
}

// 10 ЗАДАЧА 
void j(float a, float b, float c, float d)
{
	float m1 = 0, m2 = 0, m3 = 0, m4 = 0;

	int cna = 0;
	if (a > b) {
		cna++;
	}
	if (a > c) {
		cna++;
	}
	if (a > d) {
		cna++;
	}
	
	switch (cna) {
	case 0: m4 = a; break;
	case 1: m3 = a; break;
	case 2: m2 = a; break;
	case 3: m1 = a; break;
	}

	int cnb = 0;
	if (b > a) {
		cnb++;
	}
	if (b > c) {
		cnb++;
	}
	if (b > d) {
		cnb++;
	}

	switch (cnb) {
	case 0: m4 = b; break;
	case 1: m3 = b; break;
	case 2: m2 = b; break;
	case 3: m1 = b; break;
	}
	
	int cnc = 0;
	if (c > b) {
		cnc++;
	}
	if (c > a) {
		cnc++;
	}
	if (c > d) {
		cnc++;
	}

	switch (cnc) {
	case 0: m4 = c; break;
	case 1: m3 = c; break;
	case 2: m2 = c; break;
	case 3: m1 = c; break;
	}

	int cnd = 0;
	if (d > b) {
		cnd++;
	}
	if (d > c) {
		cnd++;
	}
	if (d > a) {
		cnd++;
	}

	switch (cnd) {
	case 0: m4 = d; break;
	case 1: m3 = d; break;
	case 2: m2 = d; break;
	case 3: m1 = d; break;
	}

	a = m1;
	b = m2;
	c = m3;
	d = m4;

	cout << "A = " << a << endl;
	cout << "B = " << b << endl;
	cout << "C = " << c << endl;
	cout << "D = " << d << endl;
}


int main()
{
	setlocale(LC_ALL, "RU");
	int num;
	float x = 0, y = 0, z = 0, w = 0;
	cout << "Введите номер задачи от 1 по 10 => "; cin >> num;
	if ((num == 1) or (num == 2) or ((num >= 4) and (num <= 8))) {
		cout << "Введите первое число => "; cin >> x;
		cout << "Введите второе число => "; cin >> y;
		cout << "Введите третье число => "; cin >> z;
	}
	else if (num == 3) {
		cout << "Введите первое число => "; cin >> x;
		cout << "Введите второе число => "; cin >> y;
	}
	else if ((num == 9) or (num == 10)) {
		cout << "Введите первое число => "; cin >> x;
		cout << "Введите второе число => "; cin >> y;
		cout << "Введите третье число => "; cin >> z;
		cout << "Введите четвертое число => "; cin >> w;
	}
	else {
		cout << "Такой задачи нет в базе данных";
	}

	switch (num) {
	case 1: a(x, y, z); break;
	case 2: b(x, y, z); break;
	case 3: c(x, y); break;
	case 4: d(x, y, z); break;
	case 5: e(x, y, z); break;
	case 6: f(x, y, z); break;
	case 7: g(x, y, z); break;
	case 8: h(x, y, z); break;
	case 9: i(x, y, z, w); break;
	case 10: j(x, y, z, w); break;
	}
	return 0;
}
