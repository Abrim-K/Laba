#include <iostream>
#include <stack>
using namespace std;

stack<int> stak;
stack<int> stakrev;

int main() {
	setlocale(LC_ALL, "RU");
	int s = 1;
	cout << "введите целые значения стека (для окончания ввода введите 0)" << endl;
	while (s != 0) {
		cin >> s;
		if (s == 0) {
			break;
		}
		else {
			stak.push(s);
		}
	}
	int proiz = 1;
	while (!stak.empty()) {
		proiz *= stak.top();
		stakrev.push(stak.top());
		stak.pop();
	}
	cout << "произведение: " << proiz << endl;
	cout << "Данные стека: ";
	while (!stakrev.empty()) {
		cout << "\t" << stakrev.top();
		stakrev.pop();
	}
	return 0;
}
